{
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@root": "./src",
          "@controller": "./src/controller",
          "@middlewares": "./src/middlewares",
          "@models": "./src/models",
          "@repositories": "./src/repositories",
          "@routes": "./src/routes",
          "@utils": "./src/utils"
        }
      }
    ]
  ],
  "presets": [
    
    ["@babel/preset-env", { 
      "targets": {
        "node": "current"
      }, 
      "modules": "auto"
    }],
    "@babel/preset-flow"
  ],
  "ignore": [
    "**/node_modules"
  ]
}
